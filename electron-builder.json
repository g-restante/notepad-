{
  "appId": "com.notepadsharp.app",
  "productName": "notepad#",
  "copyright": "Copyright Â© 2024 Giuseppe Restante",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "!src/**/*",
    "!webpack.config.js",
    "!tsconfig*.json",
    "!*.md",
    "!*.log",
    "!node_modules/**/*",
    "!release/**/*",
    "!build/**/*",
    "!.git/**/*",
    "!.vscode/**/*",
    "!.github/**/*"
  ],
  "extraMetadata": {
    "main": "dist/main.js"
  },
  "compression": "normal",
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "minimumSystemVersion": "10.15.0",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "type": "distribution"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "publisherName": "Giuseppe Restante"
  },
  "linux": {
    "category": "Development",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "notepad#"
  },
  "dmg": {
    "title": "notepad# Installer",
    "backgroundColor": "#1e1e1e",
    "window": {
      "width": 540,
      "height": 380
    },
    "contents": [
      {
        "x": 410,
        "y": 190,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 190,
        "type": "file"
      }
    ]
  }
}